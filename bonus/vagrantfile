Vagrant.configure("2") do |config|
  config.vm.box = "bento/ubuntu-22.04"

    config.vm.define "iot-bonus"
    config.vm.provider "virtualbox" do |vb|
      vb.memory = "8024"
      vb.cpus = 4
    end

    # Configuração de rede
    config.vm.network "forwarded_port", guest: 8443, host: 8443
    config.vm.network "forwarded_port", guest: 8181, host: 8181

    # Provisionamento
    config.vm.provision "shell", path: "./scripts/machine-setup.sh", name: "installation"
    config.vm.provision "shell", path: "./scripts/enviroment-setup.sh", name: "setup"
    config.vm.provision "shell", path: "./scripts/edit-hosts.sh", name: "hosts"
  end